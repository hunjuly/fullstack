{
    "compilerOptions": {
        // 여기부터 공통 옵션
        // Strict Checks
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        // Project Options
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES2020",
        // 여기까지 공통 옵션
        "baseUrl": "src",
        "outDir": "output/bin",
        // for reflaction
        "experimentalDecorators": true,
        "sourceMap": true,
        "declaration": false
    },
    "include": ["src/**/*.ts"]
}
